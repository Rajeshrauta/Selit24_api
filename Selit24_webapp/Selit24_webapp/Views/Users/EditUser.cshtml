                <input type="submit" value="Save" class="btn btn-success" />
            <input type="button" value="Back to List" class="btn btn-primary" onclick="location.href='@Url.Action("Users")'" />
            </div>
        </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
